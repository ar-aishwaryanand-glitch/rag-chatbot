# LLM API Keys (Get from https://console.groq.com)
GROQ_API_KEY=your_groq_api_key_here

# Vector Database (if using cloud-based)
# PINECONE_API_KEY=your_pinecone_api_key_here
# PINECONE_ENVIRONMENT=your_pinecone_environment_here

# PostgreSQL Database (Optional - for persistent session storage)
# Set USE_POSTGRES=true to enable PostgreSQL backend
USE_POSTGRES=false

# LangGraph Checkpoint Storage (Optional - for crash recovery)
# Requires USE_POSTGRES=true
# Set to false to disable checkpointing (uses session storage only)
USE_CHECKPOINTS=true

# PostgreSQL Connection (Required if USE_POSTGRES=true)
# Option 1: Full connection string (recommended for cloud providers)
# DATABASE_URL=postgresql://user:password@host:port/database

# Option 2: Individual connection parameters (for local setup)
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=rag_chatbot

# Other Configuration
# EMBEDDING_MODEL=models/embedding-001  # Google's embedding model
# CHUNK_SIZE=1000
# CHUNK_OVERLAP=100

# LLM API Keys (Get from https://console.groq.com)
GROQ_API_KEY=your_groq_api_key_here

# Vector Database Selection
# Set to true to use Pinecone instead of local FAISS
USE_PINECONE=false

# Pinecone Configuration (Optional - for production vector database)
# Get API key from https://app.pinecone.io
# PINECONE_API_KEY=your_pinecone_api_key_here
# PINECONE_INDEX_NAME=rag-agent
# PINECONE_NAMESPACE=  # Optional: organize vectors by namespace
# PINECONE_METRIC=cosine  # cosine, euclidean, dotproduct
# PINECONE_CLOUD=aws  # aws, gcp, azure
# PINECONE_REGION=us-east-1  # Region for serverless (e.g., us-east-1, eu-west-1)

# PostgreSQL Database (Optional - for persistent session storage)
# Set USE_POSTGRES=true to enable PostgreSQL backend
USE_POSTGRES=false

# LangGraph Checkpoint Storage (Optional - for crash recovery)
# Requires USE_POSTGRES=true
# Set to false to disable checkpointing (uses session storage only)
USE_CHECKPOINTS=true

# Policy Engine (Optional - for agent behavior control and governance)
# Set to false to disable policy enforcement
# Policies control tool usage, rate limits, content filtering, cost limits, and access control
USE_POLICY_ENGINE=true

# Redis Message Queue (Optional - for distributed agent coordination)
# Set to true to enable async task processing with Redis
USE_REDIS_QUEUE=false

# OpenTelemetry Observability (Optional - for monitoring and tracing)
# Set to true to enable distributed tracing and metrics collection
ENABLE_OBSERVABILITY=false

# OpenTelemetry Configuration (Required if ENABLE_OBSERVABILITY=true)
# OTEL_SERVICE_NAME=rag-agent  # Service name for traces
# OTEL_ENVIRONMENT=development  # development, staging, production
# OTEL_EXPORTER_TYPE=console  # console, otlp, jaeger
# OTEL_EXPORTER_ENDPOINT=http://localhost:4317  # OTLP gRPC endpoint
# OTEL_EXPORTER_HEADERS=  # Optional headers (e.g., x-honeycomb-team=YOUR_API_KEY)

# Jaeger Configuration (if using jaeger exporter)
# JAEGER_HOST=localhost
# JAEGER_PORT=6831

# Tracing Options
# TRACE_RAG_OPERATIONS=true
# TRACE_AGENT_OPERATIONS=true
# TRACE_TOOL_CALLS=true
# TRACE_LLM_CALLS=true

# Metrics Options
# COLLECT_METRICS=true
# METRIC_EXPORT_INTERVAL=60  # seconds

# Redis Connection (Required if USE_REDIS_QUEUE=true)
# Option 1: Full connection string (recommended)
# REDIS_URL=redis://localhost:6379/0
# REDIS_URL=redis://:password@localhost:6379/0  # With password

# Option 2: Individual connection parameters
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=

# PostgreSQL Connection (Required if USE_POSTGRES=true)
# Option 1: Full connection string (recommended for cloud providers)
# DATABASE_URL=postgresql://user:password@host:port/database

# Option 2: Individual connection parameters (for local setup)
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=rag_chatbot

# Other Configuration
# EMBEDDING_MODEL=models/embedding-001  # Google's embedding model
# CHUNK_SIZE=1000
# CHUNK_OVERLAP=100
